{
  "name": "autometa",
  "productName": "AutoMeta",
  "version": "1.0.0",
  "private": true,
  "description": "Automatic metadata generator for Lightroom",
  "main": "electron/main.js",
  "author": "Casey Harris",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "electron": "cross-env NODE_ENV=development electron .",
    "start": "electron .",
    "dev-all": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.6"
  },
  "build": {
    "appId": "com.caseyharris.autometa",
    "productName": "AutoMeta",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.photography"
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Graphics"
    }
  }
}
