{
  "name": "autometa",
  "productName": "AutoMeta",
  "version": "1.0.0",
  "private": true,
  "description": "Automatic metadata generator for Lightroom",
  "main": "electron/main.js",
  "author": "Casey Harris",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "electron": "cross-env NODE_ENV=development electron .",
    "start": "electron .",
    "dev-all": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource/inter": "^5.1.0",
    "@mui/material": "^6.1.5",
    "electron-store": "^8.2.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "vite": "^7.3.0"
  },
  "build": {
    "appId": "com.caseyharris.autometa",
    "productName": "AutoMeta",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.photography"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    }
  }
}
